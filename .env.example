# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
# Configure these settings to enable email functionality.
# The application can send welcome emails, notifications, and bulk emails.
# =============================================================================

# EMAIL_HOST: SMTP server hostname
EMAIL_HOST=smtp.gmail.com

# EMAIL_PORT: SMTP server port (587 for TLS, 465 for SSL)
EMAIL_PORT=587

# EMAIL_USE_TLS: Enable TLS encryption
EMAIL_USE_TLS=True

# EMAIL_HOST_USER: Your email address or SMTP username
EMAIL_HOST_USER=your-email@gmail.com

# EMAIL_HOST_PASSWORD: Your email password or app-specific password
# For Gmail with 2FA: Generate app password at https://myaccount.google.com/apppasswords
EMAIL_HOST_PASSWORD=your-email-password

# DEFAULT_FROM_EMAIL: The "From" address for outgoing emails
DEFAULT_FROM_EMAIL=your-email@gmail.com

